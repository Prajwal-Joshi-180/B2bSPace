<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">B2B Space</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">B2B Space</item>
                    <item name="label" xsi:type="string" translate="true">B2B Space</item>
                </argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Codilar\B2bSpace\Block\B2bSpace" name="b2b_space"
                   template="Codilar_B2bSpace::b2bspace.phtml"/>
        </referenceContainer>
    </body>
</page>
